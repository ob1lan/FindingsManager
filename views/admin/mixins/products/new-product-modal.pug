mixin newProductModal(product)
    .modal.fade(id="newProductModal" tabindex="-1" aria-labelledby="newProductModalLabel" aria-hidden="true")
        .modal-dialog.modal-lg
            .modal-content
                form(action="/admin/products/create" method="post")
                    .modal-header
                        h5#newProductModal.modal-title New Product
                        button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                    .modal-body
                            .mb-3
                                label(for="reference") Reference
                                input#reference.form-control(type="text" name="reference" required)
                            .mb-3
                                label(for="Name") Name
                                input#Name.form-control(type="text" name="name" required)
                            .mb-3
                                label(for="status") Status
                                select#status.form-control(name="status" required)
                                    option(value="Live") Live
                                    option(value="Retired") Retired
                                    option(value="Under Development") Under Development
                            .mb-3
                                label(for="description") Description
                                textarea#description.form-control(name="description" required)
                    .modal-footer
                        button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancel
                        button.btn.btn-primary(type="submit") Create Product