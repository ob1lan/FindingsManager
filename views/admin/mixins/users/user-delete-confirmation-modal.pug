mixin userdeleteConfirmationModal(user)
    .modal.fade(id="userdeleteConfirmationModal-" + user._id, tabindex="-1", aria-labelledby="userdeleteModalLabel-" + user._id, aria-hidden="true").modal.fade
        .modal-dialog
            .modal-content
                .modal-header
                    h5#userdeleteModalLabel.modal-title Confirm Deletion
                    button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
                .modal-body
                    p Are you sure you want to delete this user?
                .modal-footer
                    button.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancel
                    a#confirmDelete.btn.btn-danger(href=`/admin/users/${user._id}/delete` method="post") Delete